<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LotteryGenius.Web</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/fa-svg-with-js.css" rel="stylesheet" />
    <link href="~/lib/animate.css/animate.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/flipclock.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Abel|Barlow+Semi+Condensed:400,400i,500,500i,600,600i,700,700i,800,800i,900,900i|Dancing+Script:400,700|Roboto+Condensed:300,300i,400,400i,700,700i|Roboto:400i,500,500i,700,700i,900,900i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Dancing+Script:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Anton" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Permanent+Marker" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Bangers" rel="stylesheet">
</head>
<body>
    <div id="nav" class="navbar navbar-expand-lg navbar-light bg-light fixed-top" role="navigation" style="padding-bottom: 0; padding-top: 0; background-color: rgba(255, 255, 255, .8) !important;">
        <header class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index" style="color: rgba(33, 108, 42, 1); padding-bottom: 0; padding-top: 0;">
                <img src="~/images/ic_launcher.png" alt="Logo" style="width: 60px;" />
                Lottery Genius
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu" aria-controls="menu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="menu" class="collapse navbar-collapse">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Powerball">Powerball</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Megamillions">Megamillions</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Login" class="btn btn-portal">Login</a></li>
                </ul>
            </div>
        </header>
    </div>
    <div>
        @RenderBody()
    </div>
    <footer class="container-fluid">
        <div class="container container-fluid">
            <div class="row">
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/lib/wowjs/dist/wow.min.js"></script>
    <script src="~/js/flipclock.min.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        new WOW().init();
    </script>
    <script>
        $('a').click(function () {
            $('html, body').animate({
                scrollTop: $($(this).attr('href')).offset().top
            },
                500);
            return false;
        });
    </script>
    <script type="text/javascript">
    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>