@using LotteryGenius.Web.Models
@using LotteryGenius.Web.ViewModels
@model LotteryGenius.Web.Models.Powerball
@{
    ViewData["Title"] = "Home Page";
    List<PowerPicksViewModel> picks = ViewData["PowerPicks"] as List<PowerPicksViewModel>;
    NextPowerball nextPowerball = ViewData["NextPowerball"] as NextPowerball;
    NextMegamillion nextMegamillion = ViewData["NextMegamillion"] as NextMegamillion;
    List<MegaPicksViewModel> megaPicks = ViewData["MegaPicks"] as List<MegaPicksViewModel>;
    Megamillion latestMegamllion = ViewData["LatestMegamillion"] as Megamillion;
}

<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
        <div class="">
            <div class="">
                <div class="row">
                    <div class="col-lg-4">
                        <img class="img-fluid" src="images/powerball-pp.png" />
                    </div>
                    <hr class="horizontal-divider" />
                    <div class="col-lg-5">
                        Powerball<hr class="my-2" />
                        <div class="row">
                            <div class="col-lg-12">
                                RESULTS FOR: @Model.powerballDrawDate.ToString()
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="list-inline" style="margin-bottom: 0;">
                                    <li class="list-inline-item"><div class="circle">@Model.powerball1</div></li>
                                    <li class="list-inline-item"><div class="circle">@Model.powerball2</div></li>
                                    <li class="list-inline-item"><div class="circle">@Model.powerball3</div></li>
                                    <li class="list-inline-item"><div class="circle">@Model.powerball4</div></li>
                                    <li class="list-inline-item"><div class="circle">@Model.powerball5</div></li>
                                    <li class="list-inline-item"><div class="powerball-circle">@Model.powerball</div></li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                POWERPLAY: @Model.powerplay
                            </div>
                        </div>
                    </div>
                    @*<div class="col-lg-3">
                            Jackpot
                            <hr class="my-2">
                            <div class="row">
                                <div class="col-lg-12">
                                    @Model.powerballJackpot
                                </div>
                            </div>
                        </div>*@
                    <div class="col-lg-3">
                        Next Jackpot
                        <hr class="my-2">
                        <div class="row">
                            <div class="col-lg-12">
                                Next Draw Date: @nextPowerball.next_jackpot_date.ToString()
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                @nextPowerball.next_jackpot
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-7">
                        Winning Picks/Pick Archive
                        <div class="row">
                            <div class="clock" style="margin:2em;"></div>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        Powerball Daily Picks
                        <div class="row">
                            <table class="table table-sm">
                                @foreach (var pick in picks)
                                {
                                    <tr>
                                        <td>
                                            <ul class="list-inline">
                                                <li class="list-inline-item"><div class="circle" style="min-height: 50px; min-width: 50px;">@pick.ball1</div></li>
                                                <li class="list-inline-item"><div class="circle" style="min-height: 50px; min-width: 50px;">@pick.ball2</div></li>
                                                <li class="list-inline-item"><div class="circle" style="min-height: 50px; min-width: 50px;">@pick.ball3</div></li>
                                                <li class="list-inline-item"><div class="circle" style="min-height: 50px; min-width: 50px;">@pick.ball4</div></li>
                                                <li class="list-inline-item"><div class="circle" style="min-height: 50px; min-width: 50px;">@pick.ball5</div></li>
                                                <li class="list-inline-item"><div class="powerball-circle" style="min-height: 50px; min-width: 50px;">@pick.powerball</div></li>
                                            </ul>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-1"></div>
</div>
<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
        <div class="">
            <div class="">
                <div class="row">
