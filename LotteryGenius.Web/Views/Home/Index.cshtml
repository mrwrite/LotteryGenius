@using LotteryGenius.Web.Models
@using LotteryGenius.Web.ViewModels
@model LotteryGenius.Web.Models.Powerball
@{
    ViewData["Title"] = "Home Page";
    List<PowerPicksViewModel> picks = ViewData["PowerPicks"] as List<PowerPicksViewModel>;
    NextPowerball nextPowerball = ViewData["NextPowerball"] as NextPowerball;
    NextMegamillion nextMegamillion = ViewData["NextMegamillion"] as NextMegamillion;
    List<MegaPicksViewModel> megaPicks = ViewData["MegaPicks"] as List<MegaPicksViewModel>;
    Megamillion latestMegamllion = ViewData["LatestMegamillion"] as Megamillion;
}

<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
        <div class="">
            <div class="">
                <div class="row">
                    <div class="col-lg-4">
                        <img class="img-fluid" src="~/images/powerball-pp.png" />
                    </div>
                    <hr class="horizontal-divider" />
                    <div class="col-lg-5">
                        Latest Powerball Drawing <hr class="my-2" />
                        <div class="row">
                            <div class="col-lg-12">
                                @Model.powerballDrawDate.ToString("dddd, dd MMMM yyyy")
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="list-inline" style="margin-bottom: 0;">
                                    <li class="list-inline-item"><div class="circle">@Model.powerball1</div></li>
                                    <li class="list-inline-item"><div class="circle">@Model.powerball2</div></li>
                                    <li class="list-inline-item"><div class="circle">@Model.powerball3</div></li>
                                    <li class="list-inline-item"><div class="circle">@Model.powerball4</div></li>
                                    <li class="list-inline-item"><div class="circle">@Model.powerball5</div></li>
                                    <li class="list-inline-item"><div class="powerball-circle">@Model.powerball</div></li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                POWERPLAY: @Model.powerplay
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <span class="money-text">@Model.powerballJackpot</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        Next Powerball Drawing
                        <hr class="my-2">
                        <div class="row">
                            <div class="col-lg-12">
                                @nextPowerball.next_jackpot_date.ToString("dddd, dd MMMM yyyy")
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <span class="money-text">@nextPowerball.next_jackpot</span>
                            </div>
                            <input type="hidden" id="powerNextDate" value="@nextPowerball.next_jackpot_date" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-7" style="padding: 10% 0;">
                        <span class="next-drawing-text">Next Powerball drawing happens in...</span>
                        <div class="row">
                            <div class="clock" style="margin:2em;"></div>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        Powerball Daily Picks
                        <hr class="my-2">
                        <div class="row">
                            <table class="table table-sm table-borderless">
                                @foreach (var pick in picks)
                                {
                                    <tr>
                                        <td>
                                            <ul class="list-inline">
                                                <li class="list-inline-item"><div class="circle" style="min-height: 50px; min-width: 50px; font-size: 1vw;">@pick.ball1</div></li>
                                                <li class="list-inline-item"><div class="circle" style="min-height: 50px; min-width: 50px; font-size: 1vw;">@pick.ball2</div></li>
                                                <li class="list-inline-item"><div class="circle" style="min-height: 50px; min-width: 50px; font-size: 1vw;">@pick.ball3</div></li>
                                                <li class="list-inline-item"><div class="circle" style="min-height: 50px; min-width: 50px; font-size: 1vw;">@pick.ball4</div></li>
                                                <li class="list-inline-item"><div class="circle" style="min-height: 50px; min-width: 50px; font-size: 1vw;">@pick.ball5</div></li>
                                                <li class="list-inline-item"><div class="powerball-circle" style="min-height: 50px; min-width: 50px; font-size: 1vw;">@pick.powerball</div></li>
                                            </ul>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-1"></div>
</div>

<hr class="m-5" />

<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
        <div class="">
            <div class="">
                <div class="row">
                    <div class="col-lg-4">
                        <img class="img-fluid" src="~/images/MegaMillions_Logo.png" />
                    </div>
                    <hr class="horizontal-divider" />
                    <div class="col-lg-5">
                        Latest Megamillions Drawing <hr class="my-2" />
                        <div class="row">
                            <div class="col-lg-12">
                                @latestMegamllion.megamillionDrawDate.ToString("dddd, dd MMMM yyyy")
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="list-inline" style="margin-bottom: 0;">
                                    <li class="list-inline-item"><div class="circle">@latestMegamllion.megamillion1</div></li>
                                    <li class="list-inline-item"><div class="circle">@latestMegamllion.megamillion2</div></li>
                                    <li class="list-inline-item"><div class="circle">@latestMegamllion.megamillion3</div></li>
                                    <li class="list-inline-item"><div class="circle">@latestMegamllion.megamillion4</div></li>
                                    <li class="list-inline-item"><div class="circle">@latestMegamllion.megamillion5</div></li>
                                    <li class="list-inline-item"><div class="megamillions-circle">@latestMegamllion.megaball</div></li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                POWERPLAY: @latestMegamllion.megaplier
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <span class="money-text">@latestMegamllion.megamillionJackpot</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        Next Megamillions Drawing
                        <hr class="my-2">
                        <div class="row">
                            <div class="col-lg-12">
                                @nextMegamillion.next_jackpot_date.ToString("dddd, dd MMMM yyyy")
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <span class="money-text">@nextMegamillion.next_jackpot</span>
                            </div>
                            <input type="hidden" id="megaNextDate" value="@nextMegamillion.next_jackpot_date" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-7" style="padding: 10% 0;">
                        <span class="next-drawing-text">Next Megamillions drawing happens in...</span>
                        <div class="row">
                            <div class="clock-2" style="margin:2em;"></div>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        Megamillions Daily Picks
                        <hr class="my-2">
                        <div class="row">
                            <table class="table table-sm table-borderless">
                                @foreach (var pick in megaPicks)
                                {
                                    <tr>
                                        <td>
                                            <ul class="list-inline">
                                                <li class="list-inline-item"><div class="circle" style="min-height: 50px; min-width: 50px; font-size: 1vw;">@pick.ball1</div></li>
                                                <li class="list-inline-item"><div class="circle" style="min-height: 50px; min-width: 50px; font-size: 1vw;">@pick.ball2</div></li>
                                                <li class="list-inline-item"><div class="circle" style="min-height: 50px; min-width: 50px; font-size: 1vw;">@pick.ball3</div></li>
                                                <li class="list-inline-item"><div class="circle" style="min-height: 50px; min-width: 50px; font-size: 1vw;">@pick.ball4</div></li>
                                                <li class="list-inline-item"><div class="circle" style="min-height: 50px; min-width: 50px; font-size: 1vw;">@pick.ball5</div></li>
                                                <li class="list-inline-item"><div class="megamillions-circle" style="min-height: 50px; min-width: 50px; font-size: 1vw;">@pick.megaball</div></li>
                                            </ul>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-1"></div>
</div>